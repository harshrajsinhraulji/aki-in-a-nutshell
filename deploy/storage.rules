rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper
    function isAdmin() {
      return request.auth != null && firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Public Assets (3D models, images, songs)
    match /{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Specific constraints for Confession uploads (if any) could go here
    match /confessions/{imageId} {
       allow write: if request.resource.size < 5 * 1024 * 1024; // 5MB limit
    }
  }
}
